@using Students.Interfaces
@using System.Globalization
@model Subject

@inject ISharedResourcesService sharedResourcesService

@{
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");
    ViewData["Title"] = "Delete";
}

<h1>@sharedResourcesService.GetString("Delete", cultureInfo)</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@sharedResourcesService.GetString("Subject", cultureInfo)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Name", cultureInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Credits", cultureInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Credits)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@sharedResourcesService.GetString("Delete", cultureInfo)" class="btn btn-danger" /> |
        <a asp-action="Index">@sharedResourcesService.GetString("BackToList", cultureInfo)</a>
    </form>
</div>
