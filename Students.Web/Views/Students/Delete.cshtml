@model Student
@using Students.Interfaces
@using System.Globalization

@inject ISharedResourcesService sharedResourcesService
@{
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");
    ViewData["Title"] = "Delete";
}

<h1>@sharedResourcesService.GetString("Delete", cultureInfo)</h1>

<h3>@sharedResourcesService.GetString("AYS", cultureInfo)</h3>
<div>
    <h4>@sharedResourcesService.GetString("Student", cultureInfo)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("StudentName", cultureInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Age", cultureInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Major", cultureInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Major)
        </dd>
        <dt class="col-sm-2">
            @sharedResourcesService.GetString("PostalCode", cultureInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class="col-sm-2">
            @sharedResourcesService.GetString("FieldOfStudies", cultureInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FieldOfStudies.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@sharedResourcesService.GetString("Delete", cultureInfo)" class="btn btn-danger" /> |
        <a asp-action="Index">@sharedResourcesService.GetString("BackToList", cultureInfo)</a>
    </form>
</div>
