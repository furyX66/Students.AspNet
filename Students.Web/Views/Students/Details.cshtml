@model Student
@using Students.Interfaces
@using System.Globalization

@inject ISharedResourcesService sharedResourcesService

@{
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");
    ViewData["Title"] = "Delete";
}

@{
    ViewData["Title"] = "Details";
}

<h1>@sharedResourcesService.GetString("Details", cultureInfo)</h1>

<div>
    <h4>@sharedResourcesService.GetString("Student", cultureInfo)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Name", cultureInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Age", cultureInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Major", cultureInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Major)
        </dd>
        <dt class="col-sm-2">
            @sharedResourcesService.GetString("PostalCode", cultureInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Subjects", cultureInfo)
        </dt>
        <dd class = "col-sm-10">
            <ul>
                @foreach (var studentSubject in Model.StudentSubjects)
                {
                    <li>@studentSubject.Subject.Name</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@sharedResourcesService.GetString("Edit", cultureInfo)</a> |
    <a asp-action="Index">@sharedResourcesService.GetString("BackToList", cultureInfo)</a>
</div>
