@using Students.Interfaces
@using System.Globalization

@inject ISharedResourcesService sharedResourcesService

@{
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Students.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Students.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Students.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@sharedResourcesService.GetString("Home", cultureInfo)</a>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">@sharedResourcesService.GetString("Data", cultureInfo)</a>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Index">@sharedResourcesService.GetString("Students", cultureInfo)</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="FieldsOfStudies" asp-action="Index">@sharedResourcesService.GetString("FieldsOfStudies", cultureInfo)</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Subjects" asp-action="Index">@sharedResourcesService.GetString("Subjects", cultureInfo)</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">@sharedResourcesService.GetString("Books", cultureInfo)</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy"> @sharedResourcesService.GetString("Privacy", cultureInfo)</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">@sharedResourcesService.GetString("Language", cultureInfo)</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" data-culture="en-US">@sharedResourcesService.GetString("EN", cultureInfo)</a></li>
                                <li><a class="dropdown-item" href="#" data-culture="de-DE">@sharedResourcesService.GetString("GER", cultureInfo)</a></li>
                                <li><a class="dropdown-item" href="#" data-culture="ja-JP">@sharedResourcesService.GetString("JPN", cultureInfo)</a></li>
                                <li><a class="dropdown-item" href="#" data-culture="pl-PL">@sharedResourcesService.GetString("PL", cultureInfo)</a></li>
                                <li><a class="dropdown-item" href="#" data-culture="uk-UA">@sharedResourcesService.GetString("UA", cultureInfo)</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Students.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">@sharedResourcesService.GetString("Privacy", cultureInfo)</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
